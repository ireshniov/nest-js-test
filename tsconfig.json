{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@author/*": ["author/*"],
      "@book/*": ["book/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
